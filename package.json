{
  "name": "shekinah-church-website",
  "version": "1.0.0",
  "description": "Shekinah Presbyterian Church Tanzania Website with Admin Panel",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd jsmart1-react && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "init-admin": "node initAdmin.js",
    "seed-data": "node seedData.js",
    "build": "cd jsmart1-react && npm install && npm run build",
    "install-client": "cd jsmart1-react && npm install",
    "setup": "node setup.js",
    "render-postbuild": "npm run install-client && npm run build && npm run init-admin"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.1",
    "multer": "^1.4.5-lts.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}
